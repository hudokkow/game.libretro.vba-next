<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.vba-next"
		name="GBA (VBA-Next)"
		version="1.0.2"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.gba" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="libgame.libretro.vba-next.so"
                   library_linux="game.libretro.vba-next.so"
                   library_osx="game.libretro.vba-next.dylib"
                   library_windx="game.libretro.vba-next.dll"
                   library_wingl="game.libretro.vba-next.dll">
		<platforms>Game Boy Advance</platforms>
		<extensions>gba</extensions>
        <supports_vfs>true</supports_vfs>
        <supports_game_loop>true</supports_game_loop>
        <supports_standalone>false</supports_standalone>
        <supports_keyboard>false</supports_keyboard>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">VBA-Next v1.0.2</summary>
		<description>VBA-Next is a fork from the now inactive VisualBoy Advance project, with goals to improve the compatibility and features of the emulator.

Supported files: .gba</description>
		<license>GPL v2.0</license>
		<platform>all</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
