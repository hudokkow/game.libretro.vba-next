<?xml version="1.0" encoding="UTF-8"?>
<addon id="gameclient.vba-next"
		name="VBA-Next"
		version="1.0.4"
		provider-name="Libretro">
	<requires>
		<import addon="xbmc.libretro" version="1.0.0"/>
	</requires>
	<extension point="xbmc.gameclient"
			library_android=""
			library_linux="vba_next_libretro.so"
			library_osx=""
			library_windx=""
			library_wingl="">
		<platforms>Game Boy Advance</platforms>
		<extensions>gba</extensions>
		<allowvfs>false</allowvfs>
		<blockextract>false</blockextract>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">VBA-Next v1.0.2</summary>
		<description>VBA-Next is a fork from the now inactive VisualBoy Advance project, with goals to improve the capatibility and features of the emulator.

Supported files: .gba

Source: https://github.com/libretro/vba-next</description>
		<platform>linux</platform>
		<nofanart>true</nofanart>
		
	</extension>
</addon>